{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://portfolio-backend-fm3n.onrender.com/api/$1" },
    { "source": "/blob/(.*)", "destination": "https://portfolio-backend-fm3n.onrender.com/blob/$1" },
    { "source": "/assets/(.*)", "destination": "https://portfolio-backend-fm3n.onrender.com/assets/$1" }
  ],
  "headers": [
    {
      "source": "/api/resume/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    },
    {
      "source": "/blob/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ]
}

