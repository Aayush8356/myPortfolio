{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "backend/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/debug/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(?!api|uploads|debug).*",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}