{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://portfolio-backend-fm3n.onrender.com/api/:path*" },
    { "source": "/blob/:path*", "destination": "https://portfolio-backend-fm3n.onrender.com/blob/:path*" },
    { "source": "/assets/:path*", "destination": "https://portfolio-backend-fm3n.onrender.com/assets/:path*" }
  ],
  "headers": [
    {
      "source": "/blob/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    },
    {
      "source": "/api/resume/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/admin",
      "dest": "frontend/build/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ]
}