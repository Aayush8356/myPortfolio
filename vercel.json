{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "functions": {
    "frontend/build/index.html": {
      "includeFiles": "frontend/build/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://portfolio-backend-fm3n.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}